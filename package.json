{
  "name": "kahla",
  "version": "4.5.0",
  "description": "Kahla is a cross-platform business messaging app.",
  "author": "Aiursoft <service@aiursoft.com> (https://www.aiursoft.com/)",
  "build": {
    "appId": "com.aiursoft.kahla",
    "productName": "Kahla",
    "copyright": "Copyright Â© 2019 Aiursoft",
    "directories": {
      "app": "www"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ],
      "extraFiles": [
        {
          "from": "build/windows",
          "to": "./"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "contributors": [
    "Anduin@aiursoft.com",
    "xxyzz@aiursoft.com",
    "EdgeNeko@aiursoft.com",
    "2539820590@qq.com",
    "l2dy@macports.org"
  ],
  "license": "MIT",
  "scripts": {
    "electron": "ng build --base-href ./ && electron ./www/index.js",
    "start": "yarn prebuild && ng serve --open",
    "prebuild": "ts-node prebuild.ts",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "prod": "yarn prebuild && ng build --base-href / --output-hashing none",
    "prod-electron": "ng build --base-href ./",
    "pack": "electron-builder -p never",
    "prod-zh": "ng build --base-href / --i18n-locale zh --i18n-file ./src/messages.zh.xlf"
  },
  "dependencies": {
    "@angular/animations": "18.2.5",
    "@angular/common": "18.2.5",
    "@angular/core": "18.2.5",
    "@angular/forms": "18.2.5",
    "@angular/localize": "^18.2.5",
    "@angular/platform-browser": "18.2.5",
    "@angular/platform-browser-dynamic": "18.2.5",
    "@angular/router": "18.2.5",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@joeattardi/emoji-button": "^3.0.3",
    "@videojs/themes": "^1.0.0",
    "autolinker": "^3.14.1",
    "blueimp-load-image": "^5.11.0",
    "core-js": "^3.6.5",
    "he": "^1.2.0",
    "rxjs": "^7.8.1",
    "smoothscroll-polyfill": "^0.4.4",
    "sweetalert2": "^11.14.1",
    "tslib": "^1.10.0",
    "video.js": "^7.7.6",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.5",
    "@angular-devkit/build-optimizer": "^0.1302.1",
    "@angular-devkit/core": "^18.2.5",
    "@angular/cli": "^18.2.5",
    "@angular/compiler": "^18.2.5",
    "@angular/compiler-cli": "^18.2.5",
    "@angular/language-service": "18.2.5",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.6.1",
    "codelyzer": "^5.2.2",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.5.0",
    "uglify-js": "^3.10.0",
    "webpack": "^5.94.0"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.aiursoft.cn/aiursoft/kahla.app.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://gitlab.aiursoft.cn/aiursoft/kahla.app/-/issues"
  },
  "homepage": "https://www.kahla.app",
  "release": "build",
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
}
