@model Kahla.Home.Views.Shared.Components.KahlaNav.KahlaNavViewModel
@using Aiursoft.Probe.SDK.Services
@using Aiursoft.XelNaga.Models
@using Microsoft.Extensions.Options
@using Aiursoft.Directory.SDK.Configuration
@inject IOptions<DirectoryConfiguration> GatewayLocator
@inject ProbeSettingsFetcher ProbeLocator
<header>
    <div class="container-new py-6 px-3 text-center">
        <a href="/">
            <img src="@await ProbeLocator.GetProbeOpenAddressAsync("aiursoft/512x512.png")" alt="Kahla Desktop" width="96" height="96">
        </a>
        <ul class="nav list-style-none d-flex flex-justify-center f4">
            <li>
                <a class="d-inline-block m-2 current" href="@ServiceLocation.WWW">@Localizer["Aiursoft"]</a>
            </li>
            <li>
                <a class="d-inline-block m-2 current" href="https://wiki.aiursoft.com/Kahla/What%20is%20Kahla.md">@Localizer["Documentation"]</a>
            </li>
            <li>
                <a class="d-inline-block m-2" href="https://github.com/AiursoftWeb/Kahla.App/releases">@Localizer["Release notes"]</a>
            </li>
            <li>
                <a class="d-inline-block m-2" data-language-change-link href="@(new AiurUrl(GatewayLocator.Value.Instance, "Api", "SetLang", new { }).ToString())">
                    @Localizer["Language"]
                </a>
            </li>
            @if (Model.IsProduction)
            {
                <li>
                    <a class="d-inline-block m-2" href="//staging.kahla.app">
                        @Localizer["Staging version"]
                    </a>
                </li>
            }
            else
            {
                <li>
                    <a class="d-inline-block m-2" href="//www.kahla.app">
                        @Localizer["Production version"]
                    </a>
                </li>
            }
            <li>
                <a class="d-inline-block m-2" href="@Configuration["GitHubAddress"]">
                    @Localizer["GitHub"]
                </a>
            </li>
        </ul>
    </div>
</header>